---
import '@/app.css';

import Logo from '@/components/Logo.astro';
import IconList from '@/components/icons/IconList.astro';
import NavBar from '@/components/nav/NavBar.astro';

interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Software developer + photographer building technologies and using interdisciplinary methods to convey information in better ways."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="https://use.typekit.net/gpg0tzb.css" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{`${title ? `${title} - ` : ''}Abbie Schenk`}</title>
    </head>
    <body class="bg-black">
        <header class="h-[125px] pt-[85px] text-white">
            <NavBar />
        </header>
        <div
            class="fixed top-[20px] z-50 flex w-full flex-col flex-nowrap content-center items-center mix-blend-difference"
        >
            <a href="/">
                <Logo class="z-50 w-[200px] border-2 fill-white hover:border-accent-400" />
            </a>
        </div>
        <main class="w-full bg-white py-8">
            <div class="mx-auto mb-8 border-black sm:w-5/6 sm:border sm:border-t-4 md:max-w-3xl md:px-8">
                <slot />
            </div>
        </main>
        <footer class="flex flex-col items-center gap-2 bg-[url('/gifs/space.gif')] py-16 text-center text-white">
            <NavBar />
            <div>Â© Abbie Schenk {new Date().getFullYear()}</div>
            <IconList />
        </footer>
    </body>
</html>
