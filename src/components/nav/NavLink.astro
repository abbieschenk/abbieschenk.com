---
interface Props {
    href: string;
    text: string;
}

const { href, text } = Astro.props;

const hrefVariants = [href, href.endsWith('/') ? href.slice(0, href.length - 1) : `${href}/`];
---

<a
    {href}
    class:list={[
        'text-white',
        'hover:text-accent-400',
        'decoration-solid',
        hrefVariants.includes(Astro.url.pathname) ? 'underline' : 'no-underline',
    ]}>{text}</a
>
