---
interface Props {
    href: string;
    text: string;
}

const { href, text } = Astro.props;
---

<a
    {href}
    class:list={[
        'text-white',
        'hover:text-accent-400',
        'decoration-solid',
        Astro.url.pathname === href ? 'underline' : 'no-underline',
    ]}>{text}</a
>
